<% layout("/layouts/boilerplate") %> 
<!-- <h3>All Listings</h3> -->

<style>
   #filters {
    display: flex;
    flex-wrap: wrap;
    /* justify-content: center; */
    align-items: center;
    gap: 1rem;
    /* margin: 0; */
  }
  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .filter:hover {
    background-color: #e9ecef;
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
    color: #6797cb;
  }
  .filter div {
    font-size: 0.8rem;
    margin-bottom: 0.8rem;
    color: rgb(69, 41, 41);
  }
  .tax-info {
    display: none;
    font-size: 0.8rem;
    color: #2e373e;
  }
  .tax-toggle {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 1rem;
    margin-bottom: 2rem;
    margin-left: 3rem;
    border: 1px solid black;
    padding: 0.5rem;
    border-radius: 0.5rem;

  }
  
</style>
<div id="filters">
  <a href="/listings" class="filter text-decoration-none">
    <div><i class="fa-solid fa-globe"></i></div>
    <p>All</p>
  </a>
  <a href="/listings/category/Trending" class="filter text-decoration-none">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>
  <a href="/listings/category/Rooms" class="filter text-decoration-none">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
  <a href="/listings/category/Iconic cities" class="filter text-decoration-none">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </a>
  <a href="/listings/category/Mountain" class="filter text-decoration-none">
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Mountains</p>
  </a>
  <a href="/listings/category/Arctic" class="filter text-decoration-none">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>
  <a href="/listings/category/Farms" class="filter text-decoration-none">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>
  <a href="/listings/category/Castels" class="filter text-decoration-none">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castels</p>
  </a>
  <a href="/listings/category/Pools" class="filter text-decoration-none">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </a>
  <a href="/listings/category/Nature-centric" class="filter text-decoration-none">
    <div><i class="fa-solid fa-leaf"></i></div>
    <p>Nature-centric</p>
  </a>
  <a href="/listings/category/Campain" class="filter text-decoration-none">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Campain</p>
  </a>

  <div class="tax-toggle ms-3">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display price with taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="col listing-card">
      <div class="card col" style="width: 100%;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem" >
        <div class="card-body">
        <div class="card-img-overlay">WonderLust</div>

          <p class="card-text">
            <strong><%= listing.title %></strong> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
            <i class="tax-info">&nbsp;+ 18% GST</i>
          </p>
        </div>
      </div>
    </div>
    </a>
  <% } %>
</div>

<script>
   let taxSwitch = document.getElementById("flexSwitchCheckDefault");
   taxSwitch.addEventListener("change", function() {
     let taxInfo = document.getElementsByClassName("tax-info");
     for(info of taxInfo) {
       if (info.style.display != "inline") {
          info.style.display = "inline";
       } else {
         info.style.display = "none";
       }
     }
   });
</script>
